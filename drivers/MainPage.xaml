<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickMeApp_Admin.MainPage">

    <ScrollView
        Padding="30, 0">
        <VerticalStackLayout
            Spacing="20">
            <Label
                Text="ADMIN LOGIN"
                FontSize="40"
                FontAttributes="Bold"
                TextColor="#8B0305"
                HorizontalOptions="Center" />

            <Entry
                x:Name="username_tbx"
                Placeholder="Username"
                PlaceholderColor="Gray"/>

            <Entry
                x:Name="password_tbx"
                Placeholder="Password"
                PlaceholderColor="Gray"
                IsPassword="True"/>  

            <Button
                x:Name="login_btn"
                Text="Login" 
                Clicked="LoginClicked"
                BackgroundColor="#8B0305"
                TextColor="#F6AF0d"
                CornerRadius="20"
                HorizontalOptions="Fill"
                IsEnabled="False" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
